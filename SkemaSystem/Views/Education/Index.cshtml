            @Html.ActionLink("Slet", "Delete", new { id = item.Id }) &nbsp;&nbsp;|&nbsp;&nbsp;
            @Html.ActionLink("Tilføj/fjern lærere", "ModifyTeachers", new { id = item.Id }) &nbsp;&nbsp;|&nbsp;&nbsp;
