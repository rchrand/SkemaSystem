@model IEnumerable<SkemaSystem.Models.Education>

@{
    ViewBag.Title = "Index";
}

@section Subheader {
    @Html.Partial("_AdminTabsPartial")
}

<p>
    @Html.ActionLink("Opret ny uddannelse", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

