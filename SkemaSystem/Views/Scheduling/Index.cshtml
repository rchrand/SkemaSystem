@model SkemaSystem.Models.Scheme
@{
    ViewBag.Title = "Skemalægning";
}

@section Subheader {
    <div class="form-group">
        <!--<div class="col-sm-4">
            <label class="control-label">Uddannelse</label>
            @Html.DropDownList("education", new SelectList(ViewBag.educations, "Value", "Text"), new { @class = "form-control   " })
        </div>-->
        <div class="col-sm-3">
            <label class="control-label">Skema</label>
            <form action="@Url.Action("ChangeSubjectDropDown")" method="get" data-schemesys-ajax="true" data-schemesys-target="#subjectDropdown">
                @Html.DropDownList("scheme", new SelectList(ViewBag.schemes, "Value", "Text"), new { @class = "form-control", onchange = "$(this.form).submit();" })
            </form>
        </div>
        <div class="col-sm-3" id="subjectDropdown">
            @Html.Partial("_SubjectDropDown", Model)
        </div>
        <div class="col-sm-3">
            <label class="control-label">Lokale</label>
            @Html.DropDownList("rooms", new SelectList(ViewBag.rooms, "Value", "Text"), new { @class = "form-control" })
        </div>
        <div class="col-sm-3">
            <label class="control-label">Massehandlinger</label>
            <form>
                <select class="form-control">
                    <option value="">- Vælg handling -</option>
                    <option value="delete">Slet markerede</option>
                    <option value="move">Flyt markerede</option>
                </select>
            </form>
        </div>
    </div>
}