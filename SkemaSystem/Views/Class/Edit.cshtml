@model SkemaSystem.Models.ViewModels.ClassViewModel

@{
    ViewBag.Title = "Ændre klasse";
}

@section Subheader {
    @Html.Partial("_AdminTabsPartial")
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ClassModel.Id)

        <div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.ClassModel.ClassName, "Klassenavn:", new { @class = "control-label" })
            </div>
            <div class="col-sm-4">
                @Html.TextBoxFor(model => model.ClassModel.ClassName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClassModel.ClassName)
            </div>
        </div>
        <input type="hidden" id="Education" name="Education" value="@Model.SelectedEducation" />
        
        <!--<div class="form-group">
            <div class="col-sm-2">
                @Html.LabelFor(model => model.Education,"Uddannelse:", htmlAttributes: new { @class = "control-label" })
            </div>
            <div class="col-sm-4">
                @Html.DropDownListFor(model => model.Education, new SelectList(@ViewBag.Educations, "Value", "Text", @Model.SelectedEducation), "- Vælg uddannelse -", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Education)
            </div>
        </div>-->
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-4">
                <input type="submit" value="Opdater" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Tilbage til klasseoversigten", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
