@model SkemaSystem.Models.ViewModels.ClassViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>ClassModel</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.ClassModel.ClassName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ClassModel.ClassName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClassModel.ClassName)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Education, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Education, new SelectList(@ViewBag.Educations, "Value", "Text"), "- Vælg uddannelse -", new { @class = "form-control" })
                @*@Html.DropDownList("Education", new SelectList(@ViewBag.Educations, "Value", "Text"), "- Vælg uddannelse -", new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Education)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
