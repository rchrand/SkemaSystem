@model IEnumerable<SkemaSystem.Models.ClassModel>

@{
    ViewBag.Title = "Index";
}

@section Subheader {
    @Html.Partial("_AdminTabsPartial")
}
<p>
    @Html.ActionLink("Opret ny klasse", "Create")
    @Html.ActionLink("Start nyt semester", "CreateSemester")
</p>
<table class="table">
    <tr>   
        <th>
            @Html.DisplayNameFor(model => model.ClassName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClassName)
            </td>
            <td>
                @Html.ActionLink("Fagfordeling", "SubjectDistribution", new { id = item.Id }) |
                @Html.ActionLink("Ændre", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) |
                @Html.ActionLink("Slet", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
