<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skema System!</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header>
        <div>
            <div id="logo" />
            <nav class="subnav">
                <ul>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
            </nav>
        </div>
        <nav>
            @foreach (var link in @ViewBag.Navigation)
            {
                <ul>
                    @*<li>@Html.ActionLink(link.Title, link.Action, link.Controller)</li>*@
                </ul>
            }
        </nav>
    </header>

    <main>

        @if(IsSectionDefined("Subheader")) {
            <section class="subheader">
                @RenderSection("Subheader", required: false)
            </section>
        }
        <section>
            @RenderBody()
        </section>

    </main>
    @*<div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Skema System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Skema System!</p>
        </footer>
    </div>*@

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
