@model SkemaSystem.Models.ViewModels.TeacherViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Teacher</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Teacher.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Teacher.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Teacher.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Teacher.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Educations", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @foreach (var item in Model.AvailableEducations) {
                <div class="checkbox">
                    <label>
                        @Html.SimpleCheckbox("PostedEducations.EducationIds", Model.SelectedEducations.Contains(item), item.Id.ToString())
                        @item.Name
                    </label>
                </div>
                }
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




